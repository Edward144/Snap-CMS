Options -Indexes

ErrorDocument 404 /404.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    #Remove Trailing Slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
    
    ##Custom Rules
    
    #Admin
    RedirectMatch 301 ^/admin/$ /admin/dashboard
    RedirectMatch 301 ^/admin/editor$ /admin/editor/posts
    
    RewriteRule ^admin/banners/page-(.*)$ /admin/banners.php?page=$1 [L]
    
    RewriteRule ^admin/editor/(.*)/page-(.*)$ /admin/content_editor.php?postType=$1&page=$2 [L]
    RewriteRule ^admin/editor/(.*)/id-(.*)$ /admin/content_editor.php?postType=$1&id=$2 [L]
    RewriteRule ^admin/editor/(.*)$ /admin/content_editor.php?postType=$1 [L]
    
    RewriteRule ^admin/categories/(.*)$ /admin/categories.php?postType=$1 [L]
    
    #Custom Content   
    RedirectMatch 301 ^/post-type/$ /
    RedirectMatch 301 ^/post-type$ /
    RewriteRule ^post-type/pages$ / [L,R=301]
    
    RewriteRule ^post-type/(.*)/category-(.*)/page-(.*)$ /index.php\?postType=$1&category=$2&page=$3 [L]
    RewriteRule ^post-type/(.*)/category-(.*)$ /index.php\?postType=$1&category=$2 [L]
    RewriteRule ^post-type/(.*)/page-(.*)$ /index.php\?postType=$1&page=$2 [L]
    RewriteRule ^post-type/(.*)/(.*)$ /index.php\?postType=$1&url=$2 [L]
    RewriteRule ^post-type/(.*)$ /index.php\?postType=$1 [L]
    
    RedirectMatch 301 ^/categories$ /categories/posts
    RewriteRule ^categories/(.*)/(.*)$ categories.php?postType=$1&url=$2 [L]
    RewriteRule ^categories/(.*)$ categories.php?postType=$1 [L]
    
    #Force Non WWW
    #RewriteEngine on
    #RewriteCond %{HTTP_HOST} ^www\.example\.com [NC]
    #RewriteRule ^(.*)$ http://example.com/$1 [L,R=301]
    
    #Force HTTPS
    #RewriteEngine on
    #RewriteCond %{HTTPS} !on
    #RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
    
    #Remove PHP Extension
    RewriteEngine On
    RewriteCond %{SCRIPT_FILENAME} !-d
    RewriteRule ^([^.]+)$ $1.php [NC,L]
    
    #Deny Access To Hidden Files and Folders
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresDefault                                      "access plus 1 month"

    #CSS
    ExpiresByType text/css                              "access plus 1 year"

    #Data interchange
    ExpiresByType application/json                      "access plus 0 seconds"
    ExpiresByType application/xml                       "access plus 0 seconds"
    ExpiresByType text/xml                              "access plus 0 seconds"

    #Favicon (cannot be renamed!)
    ExpiresByType image/x-icon                          "access plus 1 week"

    #HTML components (HTCs)
    ExpiresByType text/x-component                      "access plus 1 month"

    #HTML
    ExpiresByType text/html                             "access plus 0 seconds"

    #JavaScript
    ExpiresByType application/javascript                "access plus 1 year"

    #Manifest files
    ExpiresByType application/x-web-app-manifest+json   "access plus 0 seconds"
    ExpiresByType text/cache-manifest                   "access plus 0 seconds"

    #Media
    ExpiresByType audio/ogg                             "access plus 1 month"
    ExpiresByType image/gif                             "access plus 1 month"
    ExpiresByType image/jpg                             "access plus 1 month"
    ExpiresByType image/jpeg                            "access plus 1 month"
    ExpiresByType image/png                             "access plus 1 month"
    ExpiresByType video/mp4                             "access plus 1 month"
    ExpiresByType video/ogg                             "access plus 1 month"
    ExpiresByType video/webm                            "access plus 1 month"

    #Web feeds
    ExpiresByType application/atom+xml                  "access plus 1 hour"
    ExpiresByType application/rss+xml                   "access plus 1 hour"

    #Web fonts
    ExpiresByType application/font-woff2                "access plus 1 month"
    ExpiresByType application/font-woff                 "access plus 1 month"
    ExpiresByType application/vnd.ms-fontobject         "access plus 1 month"
    ExpiresByType application/x-font-ttf                "access plus 1 month"
    ExpiresByType font/opentype                         "access plus 1 month"
    ExpiresByType image/svg+xml                         "access plus 1 month"
</IfModule>
