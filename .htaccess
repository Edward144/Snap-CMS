Options All -Indexes

ErrorDocument 404 /404.php

<IfModule mod_rewrite.c>    
    RewriteEngine On
    RewriteBase /snapcmsv2/
    
    #Admin
    RewriteRule ^admin/categories/(.*)$ admin/categories.php?post-type=$1 [L]
    RewriteRule ^admin/navigation/(.*)$ admin/navigation.php?menu=$1 [L]
    RewriteRule ^admin/content-manager/(.*)/page-(.*)$ admin/content-manager.php?post-type=$1&page=$2 [L]
    RewriteRule ^admin/content-manager/(.*)/id-(.*)$ admin/content-manager.php?post-type=$1&id=$2 [L]
    RewriteRule ^admin/content-manager/(.*)$ admin/content-manager.php?post-type=$1 [L]
    
    RewriteRule ^admin/(.*)/category-(.*)$ admin/$1.php?category=$2 [L]
    RewriteRule ^admin/(.*)/page-(.*)$ admin/$1.php?page=$2 [L]
    RewriteRule ^admin/(.*)/id-(.*)$ admin/$1.php?id=$2 [L]
    
    #Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    <IfModule mod_headers.c>
        Header always set Strict-Transport-Security "max-age=31536000;includeSubDomains"
    </IfModule>
    
    #Remove index.php From URL
    RewriteCond %{REQUEST_URI} ^(.*)/index\.php$
    RewriteRule index\.php %1/ [R=301,L]
    
    #Remove Trailing Slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L] 
    
    #Remove PHP Extension
    RewriteCond %{SCRIPT_FILENAME} !-d
    RewriteRule ^([^.]+)$ $1.php [NC,L]
    
    #Deny Access To Hidden Files and Folders
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>